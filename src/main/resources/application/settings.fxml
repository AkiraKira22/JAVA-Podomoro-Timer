<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controller.SettingsController"
            prefHeight="300" prefWidth="300">
    
    <VBox alignment="CENTER" spacing="20.0" 
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" 
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Settings" textAlignment="CENTER">
                <font>
                    <Font size="24"/>
                </font>
            </Label>
        <!-- Preset MenuButton -->
        <MenuButton text="Preset" prefWidth="120">
            <items>
                <MenuItem fx:id="preset1_1" text="1 + 1 Minutes"/>
                <MenuItem fx:id="preset25_5" text="25 + 5 Minutes"/>
                <MenuItem fx:id="preset50_10" text="50 + 10 Minutes"/>
            </items>
        </MenuButton>

        <!-- Playlist MenuButton -->
        <MenuButton fx:id="playlistMenuButton" text="Playlist" prefWidth="120">
            <items>
                <MenuItem fx:id="cafePlaylist" text="Cafe"/>
                <MenuItem fx:id="groovyPlaylist" text="Groovy"/>
                <MenuItem fx:id="jazzPlaylist" text="Jazz"/>
                <MenuItem fx:id="lofiPlaylist" text="Lofi"/>
            </items>
        </MenuButton>

        <!-- DND Checkbox -->
        <CheckBox fx:id="dndToggle" text="Enable Do Not Disturb" alignment="CENTER"/>
    </VBox>
</AnchorPane>
