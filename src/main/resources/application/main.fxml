<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controller.MainController"
            prefHeight="500.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <StackPane>
            <Canvas fx:id="progressCanvas" width="300" height="300"/>
            <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 48px;" onMouseClicked="#handleTimerClicked"/>
        </StackPane>

        <Label fx:id="stateLabel" text="Focus" style="-fx-font-size: 24px;"/>

        <HBox alignment="CENTER" spacing="10.0">
            <StackPane alignment="TOP_CENTER" maxWidth="32" fx:id="muteStack">
                <Button fx:id="muteUnmuteButton" onAction="#handleMuteUnmute"
                        style="-fx-background-color: transparent; -fx-padding: 0; -fx-border-color: transparent;">
                    <graphic>
                        <ImageView fx:id="muteUnmuteIcon" fitWidth="32" fitHeight="32">
                            <image>
                                <Image url="@/unmute_black.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Slider fx:id="volumeSlider" 
                        visible="false" style="-fx-translate-y: 40;"/>
            </StackPane>

            <Button fx:id="playPauseButton" onAction="#handlePlayPause"
                    style="-fx-background-color: transparent; -fx-padding: 0; -fx-border-color: transparent;">
                <graphic>
                    <ImageView fx:id="playPauseIcon" fitWidth="32" fitHeight="32">
                        <image>
                            <Image url="@/play_black.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="settingsButton"  onAction="#handleSettings"
                    style="-fx-background-color: transparent; -fx-padding: 0; -fx-border-color: transparent;">
                <graphic>
                    <ImageView fitWidth="32" fitHeight="32">
                        <image>
                            <Image url="@/settings.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox> 
        <ScrollPane fx:id="sessionTrackerScroll"
            prefWidth="140" maxWidth="360"
            prefHeight="60" maxHeight="60"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
            fitToWidth="true"
            style="-fx-background-color:transparent;"
            AnchorPane.leftAnchor="20"
            AnchorPane.topAnchor="20">
            <content>
                <FlowPane fx:id="sessionTrackerBar"
                        alignment="CENTER"
                        hgap="4" vgap="4"
                        prefWrapLength="140"/>
            </content>
        </ScrollPane>
    </VBox>

    <Button fx:id="endSessionButton"
                text="End Session"
                onAction="#handleEndSession"
                style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"/>
</AnchorPane>