<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.MainController" prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20.0" layoutX="100.0" layoutY="50.0">
        <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 48px;"/>
        <Label fx:id="stateLabel" text="Focus" style="-fx-font-size: 24px;"/>
        <HBox spacing="10.0">
            <Button fx:id="playPauseButton" text="Play" onAction="#handlePlayPause"/>
            <Button fx:id="settingsButton" text="Settings" onAction="#handleSettings"/>

        </HBox>
    </VBox>
</AnchorPane>